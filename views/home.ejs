
<h1>Codeial / <%=title%></h1>

<section id="feed-posts">
    <h4>POSTS</h4>
    <form action="posts/create" method="POST" id="new-post-form">
        <textarea name="content" cols="30" rows="3">

        </textarea>
        <input type="submit" value="POST">
    </form>
    <div>
        <ul>
            <% for(post of posts) { %>
                <li>
                    <p>
                        <%= post.content %><span> --->@user </span>
                        <%= post.user.name %>
                    </p>
                    
                </li>
            <% } %>
        </ul>
    </div>
</section>