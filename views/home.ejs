
<h1>Codeial / <%=title%></h1>

<section id="feed-posts">
    <h4>POSTS</h4>
    <% if(locals.user){ %>
    <form action="posts/create" method="POST" id="new-post-form">
        <textarea name="content" id="posts-content" cols="30" rows="5" placeholder="post Something !!!" required></textarea>
        <input type="submit" value="POST">
    </form>
    <% } %>
    <div>
        <ul>
            <% for(post of posts) { %>
                <%- include('_posts') -%>
            <% } %>
        </ul>
    </div>
</section>

<% if(locals.user){ %>
<section id="user-friends">
    <h4>Friends</h4>
    <% for(u of all_users) {%>
        <li>
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
        </li>
    <% } %>
</section>
<% } %>