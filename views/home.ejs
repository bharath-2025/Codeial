
<h1>Codeial / <%=title%></h1>

<section id="feed-posts">
    <h4>POSTS</h4>
    <% if(locals.user){ %>
    <form action="posts/create" method="POST" id="new-post-form">
        <textarea name="content" cols="30" rows="3">

        </textarea>
        <input type="submit" value="POST">
    </form>
    <% } %>
    <div>
        <ul>
            <% for(post of posts) { %>
                <li>
                    <p>
                        <%= post.content %><br>
                        <span> --->@user </span>
                        <%= post.user.name %>
                    </p>
                    <div class="post-comments">
                        <% if(locals.user) { %>
                            <form action="/comments/create" method="POST">
                                <input type="text" name="content" placeholder="Comment Here !....">
                                <!--To send the id of the post to which comment needs to be added -->
                                <input type="hidden" name="post" value="<%= post._id %>" >
                                <input type="submit" value="ADD Comment">
                            </form>
                            
                        <% } %>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
</section>